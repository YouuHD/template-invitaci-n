<script>
    import gsap from "gsap";
    const idle = gsap.to("#envelope", {
        y: -8,
        scale: 1.015,
        duration: 1.4,
        repeat: -1,
        yoyo: true,
        ease: "sine.inOut"
    });
    gsap.to("#seal", {
        y: 6,
        duration: 0.8,
        repeat: -1,
        yoyo: true,
        ease: "sine.inOut"
    });

    const tl = gsap.timeline({ paused: true });

    tl
        .to("#seal", {
            scale: 0,
            opacity: 0,
            duration: 0.2
        })
        .to("#flap", {
            rotateX: 180,
            duration: 1
        }, "<")
        .to("#letter", {
            y: "-30%",
            duration: 1,
            ease: "power3.out",
            opacity: 1
        })
        .to("#letter", {
            zIndex: 4,
            top: 0,
            width: "100vw",
            height: "120vh",
            borderRadius: "0px",
            duration: 1,
            ease: "power2.inOut",
        })
        .to("body",{
            duration: 0.5,
            background: "radial-gradient(circle at top, #ffffff, var(--paper))"

        })
        .to(".letter-content", {
            opacity: 1,
            y: 0,
            boxShadow: "0 -10px 30px rgba(0,0,0,0.1)",
            duration: 0.8,
        })

    .to("#envelope", { opacity: 0 });
        let started = false;

        window.addEventListener("scroll", () => {
        if (!started) {
            started = true;
            //Cambiar index para que se vea que la carta salga dentro del sobre
            const tope = document.getElementById("flap")
            tope.style.zIndex = "2";
            idle.kill();
            tl.play();
        }
    }, { passive: true });


</script>
