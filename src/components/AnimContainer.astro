---
interface Props{
    id?: string;
    class?: string;
    nombre?:string;
    title?:string;

}
const { id , class:className , nombre , title } = Astro.props;

---
<div id={id} class={`h-screen w-full flex items-center justify-center ${className ?? ""}`}>
    <!-- Flores arriba -->
    <img src="/img/flores-top2.png" id="f-tl" class="absolute -top-10 -left-15 w-64 md:w-96 z-50 fixed animate-sway" alt="flores de arriba"/>

    <img src="/img/flores-top.png" id="f-tr" class="absolute -top-10 -right-15 w-64 md:w-96 z-50 fixed animate-sway" alt="flores de arriba"/>

    <!-- Texto portada -->
    <div id="texto-portada" class="absolute top-[30%] sm:top-[30%] md:top-1/2 -translate-y-1/2 text-center z-40 flex flex-col items-center">
          
        <img src="/img/tiara-gold.png" class="w-14 md:w-16 mb-6 drop-shadow-md"/>
          
        <h2 id="txt-xv" class="font-['Pinyon_Script'] text-4xl md:text-7xl -mt-5">
            {title}
        </h2>
        <h1 id="txt-xv" class="font-['Pinyon_Script'] text-6xl md:text-9xl">
            {nombre}
        </h1>
    </div>

    <slot/>

    <!-- Flores debajo -->
    <img src="/img/flores-bottom.png" class="fixed absolute bottom-0 left-0 w-64 md:w-96 z-50 animate-organic"/>
    <img src="/img/flores-bottom.png" class="fixed absolute bottom-0 right-0 w-64 md:w-96 z-50 animate-organic"/>

    <!-- Mariposas de fondo -->
    <img src="/img/mariposa.png" class="butterfly absolute top-1/4 left-1/3 w-6 md:w-8 opacity-70 z-50"/>
    <img src="/img/mariposa.png" class="butterfly absolute bottom-2/4 md:bottom-1/3 right-1/4 w-8 md:w-10 opacity-70 z-50"/>
      
</div>