---
interface Props{
    id?: string;
    label?: string;
}

const { id , label } = Astro.props
---

<button id={id}
  class="inline-flex items-center justify-center rounded-md  px-4 py-2 text-sm font-medium text-white
         shadow transition-colors hover:bg-[#6d7c4b]
         focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-neutral-400 focus-visible:ring-offset-2
         disabled:pointer-events-none disabled:opacity-50 bg-[#5d8d7b] font-['Playfair_Display'] mt-8"
>
  {label}
</button>
