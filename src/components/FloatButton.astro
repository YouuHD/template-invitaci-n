---
interface Props{
    id?:string;
    label?:string;
    side?:string;
}

const { id , label ,side} = Astro.props
---

<button id={id} class={`fixed bottom-6  border border-(--gold) bg-white/60 backdrop-blur-md  text-[#556b2f] px-4 py-3 rounded-2xl shadow-xl animate-bounce z-50 cursor-pointer ${side ? "left-6" : "right-6"}`}>
    {label}
    <slot/>
</button>