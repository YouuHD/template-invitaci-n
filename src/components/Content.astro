<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  // --- ANIMACIÃ“N DE LA PORTADA (Sticky Reveal) ---
  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: "#portada",
      start: "top top",
      end: "bottom top",
      scrub: 1, // Hace que la animaciÃ³n siga el dedo del usuario
      
    }
  });

  tl.to("#f-tl", { x: -150, y: -150, rotate: -45 }, 0)
    .to("#f-tr", { x: 150, y: -150, rotate: 45 }, 0)
    .to("#marco", { opacity: 0.6, scale: 1.2, rotate: 15, duration: 2 }, 0.2)
    .to("#texto-portada", { opacity: 1, scale: 1, duration: 2 }, 0.5)
    .to("#quince-img", { bottom: "0%", duration: 3, ease: "power2.out" }, 0.5);

  // --- REVEAL DE SECCIONES AL BAJAR ---
  const reveals = document.querySelectorAll(".reveal");
  reveals.forEach((el) => {
    gsap.from(el, {
      scrollTrigger: {
        trigger: el,
        start: "top 85%",
        toggleActions: "play none none reverse"
      },
      y: 50,
      opacity: 0,
      duration: 1.2,
      ease: "power3.out"
    });
  });
  //Contador
  const targetDate = new Date("Jan 24, 2026 20:00:00").getTime();
  setInterval(() => {
    const now = new Date().getTime();
    const diff = targetDate - now;
    if(diff <= 0) return;
    //Error, convertir a string
    document.getElementById("days").innerText = Math.floor(diff / (1000 * 60 * 60 * 24)).toString();
    document.getElementById("hours").innerText = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)).toString();
    document.getElementById("mins").innerText = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60)).toString();
  }, 1000);

  const boton_Mapa = document.getElementById("btn_Map")
  const mapa = document.getElementById("maps")
  boton_Mapa.addEventListener("click", () =>{
    mapa.hidden = false;
    
  })
</script>

